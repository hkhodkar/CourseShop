@using CourseShop.Core.Interfaces

@inject IUserService UserService

@{
    var UserInf = UserService.GetUserInformation(User.Identity.Name);

}

<aside>
    <div class="avatar-layer">
        <div class="img-layer">
            <img src="/UserAvatar/@UserInf.AvatarName">
        </div>
        <div class="detail">
            <span> @UserInf.Username </span>
            <span> @UserInf.RegisterDate.ToShamsi() </span>
        </div>
    </div>
    <section>
        <header><h3> میز کار </h3></header>
        <div class="inner">
            <ul>
                <li><a href="/UserPanel"> مشاهده حساب کابری </a></li>
                <li><a href="/UserPanel/EditProfile"> ویرایش حساب کابری </a></li>
                <li><a href="/UserPanel/ChangePassword"> تغییر رمز عبور </a></li>
                <li><a href=""> تنظیمات حساب کاربری </a></li>
                <li><a href="/Logout"> خروج از حساب کاربری </a></li>
            </ul>
        </div>
    </section>
</aside>
