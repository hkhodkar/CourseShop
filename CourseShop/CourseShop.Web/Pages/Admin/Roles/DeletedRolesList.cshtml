@page
@model CourseShop.Web.Pages.Admin.Roles.DeletedRolesListModel

@{
    ViewData["Title"] = "بازیابی نقش حذف شده";
}


<section class="content-header">
    <h3>
        <ul class="breadcrumb">
            <li><a href="/admin"><i class="fa fa-dashboard"></i> پنل مدیریت </a></li>
            <li class="active">لیست  نقش های حذف شده</li>
        </ul>
    </h3>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive">
                    <table id="table" class="hover row-border order-column">
                        <thead>
                            <tr>
                                <th>نام نقش</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RolesList)
                            {
                                <tr id="js-roleId" data-id="@item.RoleId">
                                    <td>@item.RoleTitle</td>
                                    <td>
                                        <a style="cursor:pointer" data-toggle="modal" data-id="@item.RoleId" id="js-restore" data-target="#modal-default">
                                            <i class="fa fa-reply fa-lg" style="padding:10px;color:#fe8080"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade in" id="myModal" style=" padding-right: 17px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">بازیابی کاربر</h4>
            </div>
            <div id="body" class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">خروج</button>
                <button id="js-btnYes" type="button" class="btn btn-primary">بازیابی</button>
            </div>
        </div>
    </div>
</div>

<script src="/AdminLayout/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        $("#table").DataTable({
            "dom": '<"top"f>rt<"bottom"lp><"clear">'
        });
    })

    $('a#js-restore').on('click', function (e) {
        debugger;
        e.preventDefault();
        $("#body").html('آیا از بازیابی کاربر  مطمئن هستید؟');
        var id = $(this).closest('tr').data('id');
        $('#myModal').data('id', id).modal('show');

    });

    $('#js-btnYes').click(function () {
        var id = $('#myModal').data('id');
        $.ajax({
            type: "GET",
            url: "/Admin/roles/Delete?handler=Restore&id=" + id,
            success: () => {
                $('[data-id=' + id + ']').remove();
                $('#myModal').modal('hide');
            }
        })

    });

</script>



