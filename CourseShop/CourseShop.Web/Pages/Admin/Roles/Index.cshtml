@page
@model CourseShop.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "لیست  نقش ها";
}

<section class="content-header">
    <h3>
        <ul class="breadcrumb">
            <li><a href="/admin"><i class="fa fa-dashboard"></i> پنل مدیریت </a></li>
            <li class="active">لیست  نقش ها</li>
        </ul>
    </h3>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div>
                        <a href="roles/create" class="btn btn-success">
                            ایجاد نقش جدید
                        </a>
                    </div>
                </div>
                <div class="box-body table-responsive">
                    <table id="table" class="hover row-border order-column">
                        <thead>
                            <tr>
                                <th>نام نقش</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RolesList)
                            {
                                <tr>
                                    <td>@item.RoleTitle</td>
                                    <td>
                                        <a href="/Admin/roles/edit/@item.RoleId" class=" ">
                                            <i class="fa fa-edit fa-lg" style="padding:10px;color:#FF975B"></i>
                                        </a>
                                        <a id="delete" style="cursor:pointer" data-toggle="modal" onclick="test(this)" data-id="@item.RoleId" data-username="@item.RoleTitle" data-target="#modal-default">
                                            <i class="fa fa-trash fa-lg" style="padding:10px;color:#fe8080"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="modal fade in" id="modal-default" style=" padding-right: 17px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">حذف کاربر</h4>
            </div>
            <div id="body" class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">خروج</button>
                <button type="button" class="btn btn-danger delete">حذف</button>
            </div>
        </div>
    </div>
</div>

<script src="/AdminLayout/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        $("#table").DataTable({
            "dom": '<"top"f>rt<"bottom"lp><"clear">'
        });
    })
</script>




<script>
    var id;
    var test = function (e) {
        $("#body").html('آیا از حذف کاربر ' + e.dataset.username + ' مطمئن هستید؟');
        id = e.dataset.id;
        console.log(e);
    }
    $(".delete").click(function ($this) {
        $.ajax({
            type: "GET",
            //url: "/Admin/users/delete?id=" + id,
            url: "/Admin/users/Delete?handler=Delete&id=" + id
        })
        $("button.close").trigger('click')
    })
</script>