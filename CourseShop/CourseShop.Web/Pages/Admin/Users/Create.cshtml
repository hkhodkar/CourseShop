@page
@model CourseShop.Web.Pages.Admin.Users.CreateModel
@{
    ViewData["Title"] = "Create";
}
<section class="content">
    <form method="post" enctype="multipart/form-data">

        <div class="row">

            <div class="col-sm-12 col-md-8">

                <div class="box box-warning">
                    <div class="box-header ui-sortable-handle" style="cursor: move;">
                        <i class="fa fa-user"></i>

                        <h3 class="box-title">ثبت کاربر</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <input asp-for="CreateUserViewModel.Username" type="text" class="form-control"  placeholder="نام کاربری">
                            <span asp-validation-for="CreateUserViewModel.Username"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="CreateUserViewModel.Email" type="email" class="form-control" placeholder="ایمیل">
                            <span asp-validation-for="CreateUserViewModel.Email"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="CreateUserViewModel.Password" type="password" class="form-control" placeholder="رمز عبور" />
                            <span asp-validation-for="CreateUserViewModel.Password"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="CreateUserViewModel.Repassword" type="password" class="form-control" placeholder="تکرار رمز عبور" />
                            <span asp-validation-for="CreateUserViewModel.Repassword"></span>
                        </div>
                        <div class="box-footer clearfix">
                            <button type="submit" class=" btn btn-success">
                                ثبت کاربر
                            </button>
                        </div>

                    </div>

                </div>
            </div>
            <div class="col-sm-12 col-md-4">

                <div class="box box-info box-solid">
                    <div class="box-header with-border">
                        <h3 class="box-title">تصویر کاربر</h3>
                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-7 col-sm-8 col-xs-12" style="padding:8px">
                                <img id="imgAvatar" name="AvatarName" class="img-thumbnail" style="padding-bottom:8px" src="/UserAvatar/default.jpg">
                            </div>
                            <div class="col-md-7 col-sm-8 col-xs-12">
                                <div class="input-group">
                                    <label for="file-upload" class="custom-file-upload" style="width : 80px">
                                        <i class="zmdi zmdi-upload"></i>
                                        <span>آپلود عکس</span>
                                    </label>
                                    <input asp-for="CreateUserViewModel.UserAvatar" id="file-upload" type="file" style="display:none" >
                                    <p>لطفا تصویری انتخاب کنید</p>
                                </div>
                            </div>
                            <div class="col-md-7 col-sm-8 col-xs-12">
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-8">
            </div>
            <div class="col-sm-12 col-md-4">
                <div class="box box-success box-solid">
                    <div class="box-header with-border">
                        <h3 class="box-title">نقش های کاربر</h3>
                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        @foreach (var item in Model.RolesList)
                        {
                            <label>@item.RoleTitle</label>
                            <input name="Roles" type="checkbox" value="@item.RoleId" />
                        }
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </form>

</section>

<script src="/js/jquery.min.js"></script>

<script>
    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imgAvatar').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#file-upload").change(function () {
        readURL(this);
    });
</script>
