@page
@model CourseShop.Web.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "لیست کاربران";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h3>
        <ul class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> پنل مدیریت </a></li>
            <li class="active">لیست کاربران</li>
        </ul>
    </h3>
</section>

<!-- Main content -->
<section class="content">
    <!-- /.row -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div>
                        <a href="users/create" class="btn btn-success">
                            ایجاد کاربر جدید
                        </a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive">
                    <table id="table" class="hover row-border order-column">


                        <thead>
                            <tr>
                                <th>نام کاربری</th>
                                <th>ایمیل</th>
                                <th>تاریخ عضویت</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.UsersForAdmin)
                            {
                                <tr>
                                    <td>@item.Username</td>
                                    <td>@item.Email</td>
                                    <td>@item.RegisterDate.ToShamsi()</td>
                                    <td>
                                        <a href="/Admin/users/editUser/@item.UserId" class=" ">
                                            <i class="fa fa-edit fa-lg" style="padding:10px;color:#FF975B"></i>
                                        </a>
                                        <a id="delete" data-toggle="modal" onclick="test(this)" data-id="@item.UserId" data-username="@item.Username" data-target="#modal-default">
                                            <i class="fa fa-trash fa-lg" style="padding:10px;color:#fe8080"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
<!-- /.content -->
@*<button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-default">
        مدال Default
    </button>*@

<div class="modal fade in" id="modal-default" style=" padding-right: 17px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">حذف کاربر</h4>
            </div>
            <div id="body" class="modal-body">
                @*<p>آیا از حذف کاربر انتخاب شده مطمئن هستید؟</p>*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">خروج</button>
                <button type="button" class="btn btn-primary delete">حذف</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script src="/AdminLayout/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        $("#table").DataTable({
            "dom": '<"top"f>rt<"bottom"lp><"clear">'
        });
    })
</script>




<script>
    var id;
    var test = function (e) {
        $("#body").html('آیا از حذف کاربر ' + e.dataset.username + ' مطمئن هستید؟');
        id = e.dataset.id;
    }
    $(".delete").click(function ($this) {
        $.ajax({
            type: "GET",
            url: "/Admin/users/delete?id=" + id
        }).done(() => {
            $(".close").trigger();
        })
    })
</script>
