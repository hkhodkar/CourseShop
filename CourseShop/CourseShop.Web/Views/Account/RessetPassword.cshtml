@model CourseShop.Core.DTOs.RessetPasswordViewModel


@{
    ViewData["Title"] = "بازیابی رمز عبور";
}


<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">فروشگاه دوره</a></li>
            <li class="breadcrumb-item active" aria-current="page">بازیابی رمز عبور</li>
        </ul>
    </nav>
</div>

<main class="client-page">
    <div class="container-content">

        <header><h2> بازیابی رمز عبور </h2></header>

        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success">
                بازیابی رمز عبور با موفقیت انجام شد
            </div>
            <script>
                $(document).ready(function () {
                    setTimeout(function () {
                        window.location.href = "/login"
                    }, 2000);
                });
            </script>
        }

        <div class="form-layer">

            <form asp-controller="account" asp-action="RessetPassword" method="post">

                <input type="hidden" asp-for="ActivateCode" />

                <div class="input-group">
                    <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
                    <input type="password" asp-for="Password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="Password"></span>


                <div class="input-group">
                    <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
                    <input type="password" asp-for="Repassword" class="form-control" placeholder=" تکرار رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="Repassword"></span>


                <div class="link">
                    <a href="/login"> <i class="zmdi zmdi-account"></i> ورود به سایت </a>
                </div>

                <button type="submit" class="btn btn-success"> ثبت </button>

            </form>
        </div>

    </div>
</main>

